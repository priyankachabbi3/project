<h1>Listing categories</h1>

<table>
  <tr>
    <th>Name</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td><%= category.user.email %></td>
    <td><%= button_to 'Show', category, method: :get %></td>
    <td><%= button_to 'Edit', edit_category_path(category), method: :get %></td>
    <td><%= button_to 'Destroy', category, method: :delete, :id => 'delete' %></td>
  </tr>
<% end %>
</table>

<br />

