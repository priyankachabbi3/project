<h1>Listing events</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Date</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.title %></td>
    <td><%= event.description %></td>
    <td><%= event.start %></td>
    <td><%= event.user.email %></td>
    <td><%= button_to 'Show', event, method: :get %></td>
    <td><%= button_to 'Edit', edit_event_path(event), method: :get %></td>
    <td><%= button_to 'Destroy', event, method: :delete, :id => 'delete'%></td>
  </tr>
<% end %>
</table>

